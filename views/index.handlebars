<div class="container">
	<div class="row">
		<div class="col-md-8 text-center" id="top-bar">
			<h1> Scraped Articles </h1>
			<h4> Click on an article title to enter a note for other's to see!</h4>
		</div>
		<div class="col-md-4 align-self-end" id="notes">
		</div>
		{{#each articles}}
		<div class="card">
			<div class="col-8" id="articles">
				<h1 data-id="{{this._id}}">{{this.title}}</h1>
				<h4><a href="{{this.link}}">{{this.link}}</a></h4>
				<p>{{this.summary}}</p>
			</div>
		</div>
		{{/each}}
	</div>
</div>